{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "RAG Aerospace Helm Values",
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "repository": {"type": "string"},
        "tag": {"type": "string"},
        "pullPolicy": {"type": "string", "enum": ["IfNotPresent", "Always", "Never"]}
      },
      "required": ["repository", "tag"]
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {"type": "string", "enum": ["ClusterIP", "NodePort", "LoadBalancer"]},
        "port": {"type": "integer", "minimum": 1, "maximum": 65535},
        "targetPort": {"type": "integer", "minimum": 1, "maximum": 65535}
      },
      "required": ["type", "port", "targetPort"]
    },
    "env": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {"type": "string"},
          "value": {"type": "string"}
        },
        "required": ["name", "value"]
      }
    },
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": {"type": "boolean"},
        "className": {"type": "string"},
        "hosts": {
          "type": "array",
          "items": {"type": "string"}
        },
        "tls": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "secretName": {"type": "string"},
              "hosts": {"type": "array", "items": {"type": "string"}}
            },
            "required": ["secretName", "hosts"]
          }
        }
      }
    },
    "hpa": {
      "type": "object",
      "properties": {
        "enabled": {"type": "boolean"},
        "minReplicas": {"type": "integer", "minimum": 1},
        "maxReplicas": {"type": "integer", "minimum": 1},
        "cpuUtilization": {"type": "integer", "minimum": 1, "maximum": 100}
      }
    },
    "pdb": {
      "type": "object",
      "properties": {
        "enabled": {"type": "boolean"},
        "minAvailable": {"type": ["string", "integer"]}
      }
    },
    "redis": {
      "type": "object",
      "properties": {
        "enabled": {"type": "boolean"}
      }
    }
  },
  "additionalProperties": true
}
