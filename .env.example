# LLM
OPENAI_API_KEY=sk-xxx
# Azure OpenAI (optional)
# AZURE_OPENAI_ENDPOINT=https://your-azure-openai.openai.azure.com
# AZURE_OPENAI_API_VERSION=2024-02-01

# Embeddings model (OpenAI or HuggingFace; example uses OpenAI)
EMBED_MODEL=text-embedding-3-large
# Optional embedding presets and map by doc_type
# EMBED_MODEL_SMALL=text-embedding-3-small
# EMBED_MODEL_LARGE=text-embedding-3-large
# EMBED_MODEL_MAP=default:large,pdf:small,html:small,docx:large

# Runtime
ENV=local
PORT=8000

# Milvus
MILVUS_HOST=milvus-standalone
MILVUS_PORT=19530
MILVUS_COLLECTION=aero_docs_v1

# Retriever backend: faiss or milvus
RETRIEVER_BACKEND=faiss

# Chunking parameters
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Retrieval parameters
RETRIEVER_K=5
RETRIEVER_FETCH_K=25

# Auth & rate limit
# Optional API key for /ask and protected /metrics when METRICS_PUBLIC=false
# API_KEY=your-secret
METRICS_PUBLIC=true
RATE_LIMIT_PER_MIN=60

# Redis for rate limiting (optional)
# REDIS_URL=redis://:password@redis-host:6379/0

# Router & multi-vendor (optional)
# ROUTER_ENABLED=true
# ROUTER_DEFAULT_OBJECTIVE=balanced
# ROUTER_ALLOWED_PROVIDERS=openai,azure_openai

# AWS Bedrock (optional)
# BEDROCK_REGION=us-east-1
# BEDROCK_CHAT_MODEL=anthropic.claude-3-5-sonnet-20240620-v1:0
# BEDROCK_EMBEDDING_MODEL=amazon.titan-embed-text-v2:0

# JWT (optional)
# JWT_SECRET=your-hmac-secret
# JWT_ISSUER=your-issuer
# JWT_AUDIENCE=your-audience
# JWT_ALG=HS256
# JWT_JWKS_URL=https://login.microsoftonline.com/<tenant>/discovery/v2.0/keys
# JWT_JWKS_CACHE_SECONDS=3600

# Prometheus Pushgateway (optional, for ingestion metrics)
# PUSHGATEWAY_URL=http://pushgateway:9091
