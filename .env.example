# LLM
OPENAI_API_KEY=sk-xxx

# Embeddings model (OpenAI or HuggingFace; example uses OpenAI)
EMBED_MODEL=text-embedding-3-large

# Runtime
ENV=local
PORT=8000

# Milvus
MILVUS_HOST=milvus-standalone
MILVUS_PORT=19530
MILVUS_COLLECTION=aero_docs_v1

# Retriever backend: faiss or milvus
RETRIEVER_BACKEND=faiss

# Chunking parameters
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Retrieval parameters
RETRIEVER_K=5
RETRIEVER_FETCH_K=25

# Auth & rate limit
# Optional API key for /ask and protected /metrics when METRICS_PUBLIC=false
# API_KEY=your-secret
METRICS_PUBLIC=true
RATE_LIMIT_PER_MIN=60

# Redis for rate limiting (optional)
# REDIS_URL=redis://:password@redis-host:6379/0

# JWT (optional)
# JWT_SECRET=your-hmac-secret
# JWT_ISSUER=your-issuer
# JWT_AUDIENCE=your-audience
